{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.jsx",
  ],
  "exclude": [
    "node_modules/**"
  ]
}